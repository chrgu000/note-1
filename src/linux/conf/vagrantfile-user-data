#cloud-config

coreos:
  units:
    - name: "docker.service"
      drop-ins:
        - name: "50-insecure-registry.conf"
          content: |
            [Service]
            Environment=DOCKER_OPTS='--registry-mirror=http://0821f5e0.m.daocloud.io'
    - name: settimezone.service
      command: start
      content: |
        [Unit]
        Description=Set the time zone

        [Service]
        ExecStart=/usr/bin/timedatectl set-timezone Asia/Shanghai
        RemainAfterExit=yes
        Type=oneshot

    - name: "docker-gollum.service"
      command: "start"
      content: |
        [Unit]
        Description=Gollum container
        Author=Me
        After=docker.service
        [Service]
        Restart=always
        ExecStart=/opt/bin/docker-compose -f /home/core/gollum.yml start gollum
    - name: soft.mount
      command: start
      content: |
        [Mount]
        What=/dev/sdb1
        Where=/soft
        Type=ext4
write_files:
  - path: /etc/hosts
    content: |
      127.0.0.1     localhost
      192.168.137.15    dishui.io
  - path: "/etc/resolv.conf"
    permissions: "0644"
    owner: "root"
    content: |
      nameserver 114.114.114.114
      nameserver 172.17.0.1